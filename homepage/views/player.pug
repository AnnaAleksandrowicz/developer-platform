hr.separator
h3.section-title HTML5 Video Player for any Experience

mixin player-button(image, title, active)
  .player-button(class=active ? "active" : "")
    img(src=image)
    h6=title
mixin player-dropdown-item(image, title)
  a.dropdown-item
    img(src=image)
    span=title

.container
  .row
    .col
      .row
        .col
          +player-button('/homepage/assets/images/HTML5%20Video%20Player/Tab1-icon.svg', 'Fastest time to first frame', true)
        .col
          +player-button('/homepage/assets/images/HTML5%20Video%20Player/Tab2-icon.svg', 'Most ads delivered')
        .col
          +player-button('/homepage/assets/images/HTML5%20Video%20Player/Tab3-icon.svg', 'In video quizzes')
      .row
        .col
          +player-button('/homepage/assets/images/HTML5%20Video%20Player/Tab4-icon.svg', 'Interactive storytelling')
        .col
          +player-button('/homepage/assets/images/HTML5%20Video%20Player/Tab5-icon.svg', 'Dual screen presentation')
        .col
          +player-button('/homepage/assets/images/HTML5%20Video%20Player/Tab6-icon.png', 'Live video')
    .col
      .video-player
        img(src="/homepage/assets/background.jpg")
.tablet
  .d-flex
    +player-button('/homepage/assets/background.jpg', 'Fastest time to first frame', true)
    +player-button('/homepage/assets/background.jpg', 'Most ads delivered')
    +player-button('/homepage/assets/background.jpg', 'In video quizzes')
    +player-button('/homepage/assets/background.jpg', 'Interactive storytelling')
    +player-button('/homepage/assets/background.jpg', 'Dual screen presentation')
    +player-button('/homepage/assets/background.jpg', 'Live video')
  .video-player
    img(src="/homepage/assets/background.jpg")

.mobile.text-center
  .dropdown
    a.btn.dropdown-toggle(data-toggle="dropdown")
      img(src="/homepage/assets/background.jpg")
      span Fastest time to first frame
      i.fa.fa-right.fa-chevron-down
    .dropdown-menu
      +player-dropdown-item('/homepage/assets/background.jpg', 'Fastest time to first frame', true)
      +player-dropdown-item('/homepage/assets/background.jpg', 'Most ads delivered')
      +player-dropdown-item('/homepage/assets/background.jpg', 'In video quizzes')
      +player-dropdown-item('/homepage/assets/background.jpg', 'Interactive storytelling')
      +player-dropdown-item('/homepage/assets/background.jpg', 'Dual screen presentation')
      +player-dropdown-item('/homepage/assets/background.jpg', 'Live video')

  .video-player
    img(src="/homepage/assets/background.jpg")
